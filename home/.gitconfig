[color]
	branch = auto
	diff = auto
	status = auto
[user]
	name = Tomek Maszkowski
[alias]
	st = status -sb
	co = checkout
	br = branch -a --sort=-committerdate
	logx = log --graph --decorate --oneline --all
	lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset'
	graph = log --graph --all --decorate --stat --date=iso
  cp = cherry-pick
[gui]
	spellingdictionary = en
[merge]
	tool = vimdiff
[mergetool]
	keepbackup = false
[core]
	editor = vim
	excludesfile = ~/.gitignore_global
[push]
	default = current
